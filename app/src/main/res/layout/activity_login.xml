<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mahmoudfcih.simpleblogapp.Login"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:background="@drawable/large"
        android:scaleType="centerCrop" />
    <RelativeLayout
        android:id="@+id/transparentOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bd000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal">
        <Button
            android:id="@+id/sup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Sign up"
            android:textIsSelectable="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:elegantTextHeight="false"
            />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="26dp">
            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logo1"

                    />

                </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:id="@+id/linearLayout"
            android:layout_marginBottom="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/loginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        app:met_baseColor="@android:color/white"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="?colorAccent"
        app:met_underlineColor="#fff"
        app:met_singleLineEllipsis="true"
        app:met_iconLeft="@drawable/ic_action_name"
        app:met_iconPadding="0dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp" />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/loginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        app:met_baseColor="@android:color/white"
        app:met_floatingLabel="normal"
        app:met_primaryColor="?colorAccent"
        app:met_underlineColor="#fff"
        app:met_iconLeft="@drawable/ic_lock_white_48dp"
        app:met_iconPadding="0dp"
        app:met_singleLineEllipsis="true"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_signup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#FFFFFF"
            fancy:fb_focusColor="#bfd8e7"
            fancy:fb_radius="0dp"
            fancy:fb_text="Login"
            fancy:fb_textColor="#fff"

            fancy:fb_ghost="true"
            android:layout_marginTop="10dp"
            android:visibility="gone" />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:textIsSelectable="true"
            android:id="@+id/loginbtn"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"
            android:textColor="#fff"
            android:textStyle="bold"
            android:elegantTextHeight="false"
            />
        <TextView
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot your login details? Get help signin in."
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="#c0c0c0"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="#c0c0c0"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnfacebook"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/facebook"
                />
            <TextView
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in with Facebook"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/googlebtn"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/google"
                android:id="@+id/imageView2" />

            <TextView
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in with Google"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

