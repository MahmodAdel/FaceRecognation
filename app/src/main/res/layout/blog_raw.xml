<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp"
    android:background="@drawable/rounded"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/facebook_avatar"


        />
        <TextView
            android:id="@+id/post_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Username"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    <TextView

        android:id="@+id/post_date"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginRight="16dp"

        android:layout_marginTop="16dp"
        android:textColor="@color/white"

        android:text="10h30" />
    <ImageButton
        android:id="@+id/item_menu"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:paddingLeft="8dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:paddingRight="8dp"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/ic_dots" />

</LinearLayout>
        <TextView
            android:text="TextView"
            android:textColor="@color/white"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_location"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="16dp"
            android:textSize="8sp"
            android:layout_marginLeft="16dp" />
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="5dp"
            android:layout_height="250dp"
            android:layout_width="match_parent"
            android:id="@+id/post_image"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded"
            />
        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"
            android:id="@+id/progressBar"
            />
</FrameLayout>
  <!--  <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/white"

        android:id="@+id/post_title"
        android:text="Post Title"
        android:textStyle="normal|bold"
        android:padding="10dp"
        android:textSize="18sp" />-->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/post_desc"
            android:text="Post Description"
            android:paddingLeft="15dp"
            android:textColor="@color/white"
            android:maxLines="3"
            android:paddingRight="15dp"
            android:paddingBottom="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"

        android:layout_marginLeft="8dp"
        android:id="@+id/numberoflike"
        android:textSize="16dp"
         />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_thumb_up_black_24dp"
                android:background="@drawable/ic_thumb_up_black_24dp"
                android:id="@+id/likebtn"
                 />
</LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/numberofcomment"
                    android:textSize="16dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/white"


                    />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mode_comment_black_24dp"
                android:background="@drawable/ic_mode_comment_black_24dp"
                android:id="@+id/commentbtn"
                 />
                </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <ImageView

                android:id="@+id/post_dialog_select_imageview"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="bottom"

                android:layout_marginLeft="16dp"

                android:layout_marginRight="8dp"

                android:src="@drawable/ic_add_a_photo_black_24dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/comment"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Type your Comment"
                android:textSize="12dp"

                />
            <ImageView

                android:id="@+id/post_dialog_send_imageview"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="bottom"

                android:layout_marginLeft="130dp"

                android:layout_marginRight="14dp"

                android:src="@drawable/ic_send_black_24dp" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:id="@+id/comments_layout"
            >
            <TextView
                android:textColor="@color/white"

                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="View all"
                android:textSize="12dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/numberofcomments"
                android:textSize="12dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="@color/white"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="comments"
                android:textSize="12dp"
                android:textColor="@color/white"


                />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>